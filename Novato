#include <stdio.h>

int main() {
    // Carta 1 - Cariacica
    char estado1 = 'E';
    char codigo1[4] = "E03";
    char cidade1[50] = "Cariacica";
    int populacao1 = 348738;
    float area1 = 279.88;
    float pib1 = 12.5; // em bilhões
    int pontos1 = 6;

    // Carta 2 - Linhares
    char estado2 = 'E';
    char codigo2[4] = "E04";
    char cidade2[50] = "Linhares";
    int populacao2 = 179755;
    float area2 = 3496.50;
    float pib2 = 8.7; // em bilhões
    int pontos2 = 5;

    // Saída formatada
    printf("Carta 1:\n");
    printf("Estado: %c\n", estado1);
    printf("Codigo: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", cidade1);
    printf("Populacao: %d\n", populacao1);
    printf("Area: %.2f km²\n", area1);
    printf("PIB: %.2f bilhoes de R$\n", pib1);
    printf("Numero de Pontos Turisticos: %d\n", pontos1);

    printf("\nCarta 2:\n");
    printf("Estado: %c\n", estado2);
    printf("Codigo: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", cidade2);
    printf("Populacao: %d\n", populacao2);
    printf("Area: %.2f km²\n", area2);
    printf("PIB: %.2f bilhoes de R$\n", pib2);
    printf("Numero de Pontos Turisticos: %d\n", pontos2);

    return 0;
}
